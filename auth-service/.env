# Auth Service - development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# MongoDB
MONGODB_URL=mongodb://auth-mongodb:27017
MONGODB_DB_NAME=auth_db_development
MONGODB_COLLECTION=users

# Keycloak
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=vehicle-sales
KEYCLOAK_CLIENT_ID=vehicle-sales-app
KEYCLOAK_CLIENT_SECRET=vehicle-sales-secret
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Padr√£o
DEFAULT_ADMIN_EMAIL=admin@vehiclesales.com
DEFAULT_ADMIN_PASSWORD=admin123

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
API_WORKERS=1

# Rate Limiting
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limit Settings
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_GENERAL_PER_MINUTE=100
RATE_LIMIT_LISTING_PER_MINUTE=30
RATE_LIMIT_HEALTH_PER_MINUTE=200
RATE_LIMIT_ADMIN_PER_MINUTE=50

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_FORMAT=json
LOG_FILE=logs/auth-service.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# Session
SESSION_TIMEOUT=3600
REFRESH_TOKEN_EXPIRY=2592000

# Development
RELOAD_ON_CHANGE=true
SHOW_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false

